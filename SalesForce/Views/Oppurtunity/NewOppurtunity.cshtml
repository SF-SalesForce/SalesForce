@model DataAccessLayer.Tbl_Oppurtunity
@{
    ViewBag.Title = "NewOppurtunity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>NewOppurtunity</h2>


<body>
    <div>
        @using (Html.BeginForm("NewOppurtunity", "Oppurtunity", FormMethod.Post))
        {

            @Html.Label("Description")
            @Html.TextBoxFor(x => x.OppurtunityDescription, new { @style = "width:450px", @class = "form-control" })
            @Html.Label("Entry")
            @Html.TextBoxFor(x => x.OppurtunityEntery, new { @style = "width:450px", @class = "form-control" })
            @Html.Label("Start Date")
            @Html.TextBoxFor(x => x.OppurtunityStartDate, new {@style="width:450px", @type = "date", @class = "form-control" })
            @Html.Label("Expired Date")
            @Html.TextBoxFor(x => x.OppurtunityExpireDate, new { @style = "width:450px", @type = "date", @class = "form-control" })
            @Html.Label("Customer Adress")
            @Html.TextBoxFor(x => x.OppurtunityCustomerAdress, new { @style = "width:450px", @class = "form-control" })
            @Html.Label("Customer Name")
            @Html.TextBoxFor(x => x.OppurtunityCustomerName, new { @style = "width:450px", @class = "form-control" })
            @Html.Label("Detail")
            @Html.TextAreaFor(x => x.OppurtunityDetail, new { @style = "width:450px", @class = "form-control" })
            @Html.Label("Header")
            @Html.TextBoxFor(x => x.OppurtunityHeader, new { @style = "width:450px", @class = "form-control" })
            @Html.Label("Type")
            @Html.TextBoxFor(x => x.OppurtunityType, new { @style = "width:450px", @class = "form-control" })
            @Html.Label("CustomerName")
            @Html.TextBoxFor(x => x.OppurtunityCustomerName, new { @style = "width:450px", @class = "form-control" })

            <br>
            <button class="btn btn-success" id="p">
                Kaydet
            </button>
        }
    </div>
</body>

